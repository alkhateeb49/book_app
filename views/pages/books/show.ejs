<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../styles/reset.css">
        <link rel="stylesheet" href="../styles/base.css">
        <title>Book APi</title>
    </head><body class="result">
    <%- include('../../layout/header') %>

    <div class="parent2">
        <% bookDetails.forEach(valueData =>{%>
            <div class="child2">
            <img src="<%= valueData.image_url;%>" alt=""><br>
            <h2 class="title"><%= valueData.title;%></h2><br>
            <h3><%= valueData.author;%> </h3><br>
            <p><%= valueData.description;%> </p><br>
            <p><%= valueData.isbn;%> </p><br>
        </div>
            
        <form action="/books/<%=valueData.id %>?_method=DELETE" method="POST">
            <button class="btn_view" type="submit" id="delete" >Delete</button>
        </form>
        <div style="text-align: center;">
        <button class="btn_view"  onclick="update()" id="update" >Update</button>
        </div>
        
            <% }); %>

</div >
<br>
<br>
<br>

<%- include('edit',{editBooks:bookDetails}) %>
<%- include('../../layout/footer') %>
<script src="../js/app.js"></script>
</body>
</html>